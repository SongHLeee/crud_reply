<div class="container">
    <h3>Board</h3>
    <form action="/update/<%=@onePost.id%>" method="POST" class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input name="inputName" id="name" type="text" class="validate" value = "<%= @onePost.name%>">
          <label for="name" data-error="wrong" data-success="작성완료">이름</label>
        </div>
        <div class="input-field col s12">
          <input name="inputTitle" id="title" type="text" class="validate" value = "<%= @onePost.title%>">
          <label for="title" data-error="wrong" data-success="작성완료">제목</label>
        </div>
        <div class="input-field col s12">
          <textarea name="inputPostContent" id="textarea1" class="materialize-textarea" value = "<%= @onePost.postContent %>"></textarea>
          <label for="textarea1">내용</label>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">수정하기</button>
      </div>
    </form>
</div>